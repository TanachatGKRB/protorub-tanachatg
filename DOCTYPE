<script>

// Main box data for calculator
const boxData = {
  AB: { rub: 2, pcs: 2, style: "One rub contains 2 pcs in one row" },
  "2A": { rub: 2, pcs: 2, style: "One rub contains 2 pcs in one row" },
  B: { rub: 2, pcs: 4, style: "One rub contains 3‚Äì5 pcs in one row" },
  C: { rub: 3, pcs: 2, style: "One rub contains 2 pcs in one row" },
  "2B": { rub: 4, pcs: 4, style: "One rub contains 3‚Äì5 pcs in one row" },
  "2C": { rub: 9, pcs: 2, style: "One rub contains 2 pcs in one row" },
  D11: { rub: 12, pcs: 2, style: "One rub contains 2 pcs in one row" }
};

// Example card settings
const boxSettings = {
  "AB": { rub: 2, pcs: 2 },
  "2A": { rub: 2, pcs: 2 },
  "C":  { rub: 3, pcs: 2 },
  "2B": { rub: 4, pcs: 5 },
  "2C": { rub: 9, pcs: 2 },
  "B":  { rub: 2, pcs: 5 },
  "D11": { rub: 12, pcs: 2 }
};

// Fill dropdown
const select = document.getElementById("boxType");
Object.keys(boxData).forEach(k => {
  const opt = document.createElement("option");
  opt.value = k;
  opt.textContent = "Box " + k;
  select.appendChild(opt);
});

// Fill table
const table = document.getElementById("boxTable");
Object.keys(boxData).forEach(k => {
  const d = boxData[k];
  table.innerHTML += `
    <tr>
      <td>Box ${k}</td>
      <td>${d.rub} Rub</td>
      <td>${d.pcs} Pcs/Rub</td>
      <td>${d.style}</td>
    </tr>`;
});


// CALCULATION + SHOW EXAMPLE CARD
function calculate() {
  const type = document.getElementById("boxType").value;
  const totalPcs = parseInt(document.getElementById("pcsInput").value);
  const result = document.getElementById("result");

  if (!totalPcs || totalPcs <= 0) {
    result.style.display = "block";
    result.innerHTML = "‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏ä‡∏¥‡πâ‡∏ô‡πÉ‡∏´‡πâ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á";
    return;
  }

  const rubCount = boxData[type].rub;
  const pcsPerRub = Math.floor(totalPcs / rubCount);
  const remainder = totalPcs % rubCount;

  let output = `<p>üì¶ Box Type: <strong>${type}</strong></p>`;
  output += `<p>üî¥ Total Rubs Used: <strong>${rubCount} Rub</strong></p>`;

  for (let i = 1; i <= rubCount; i++) {
    const pcs = pcsPerRub + (i <= remainder ? 1 : 0);
    output += `<p class='rub-item'>Rub ${i}: <strong>${pcs} pcs</strong></p>`;
  }

  output += `<p>‚úÖ Total Pieces: <strong>${totalPcs}</strong></p>`;

  result.innerHTML = output;
  result.style.display = "block";

  // SHOW EXAMPLE CARD
  showExample(type, totalPcs);
}


// NEW EXAMPLE CARD FUNCTION
function showExample(boxType, totalPcs) {
  const setting = boxSettings[boxType];
  if (!setting) return;

  let rub = setting.rub;
  let pcsPerRub = setting.pcs;

  let summaryText = `${totalPcs} Pcs / ${rub} Rub / ${pcsPerRub} Pcs per Rub`;

  document.getElementById("summary-text").innerText = summaryText;

  document.getElementById("box-title").innerText = "Arrangement Example";

  let container = document.getElementById("example-boxes");
  container.innerHTML = "";

  for (let i = 0; i < pcsPerRub; i++) {
    let box = document.createElement("div");
    box.classList.add("item-box");
    box.innerText = "Necklaces";
    container.appendChild(box);
  }

  document.getElementById("example-card").style.display = "block";
}

</script>

